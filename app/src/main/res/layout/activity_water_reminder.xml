<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37B7B5"
    tools:context=".WaterReminder">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:text="Let's Hydrate"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/water_reminder_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="505dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:background="@drawable/curved_textview"
        android:backgroundTint="#FFFFFF">

        <Button
            android:id="@+id/water_reminder_changeWaterButton"
            android:layout_width="126dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#A0E4E0"
            android:text="Drink"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/water_reminder_changeWaterImage"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="63dp"
            android:layout_marginBottom="93dp"

            app:srcCompat="@drawable/glass1" />

        <TextView
            android:id="@+id/water_reminder_textView2L"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="171dp"
            android:layout_marginEnd="37dp"
            android:width="300dp"
            android:gravity="center"
            android:text="2L"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <View
            android:layout_width="4dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="121dp"
            android:layout_marginEnd="96dp"
            android:background="@android:color/black" />

        <View
            android:layout_width="20dp"
            android:layout_height="3dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="314dp"
            android:layout_marginBottom="266dp"
            android:background="@android:color/black" />

        <View
            android:id="@+id/water_reminder_view"
            android:layout_width="20dp"
            android:layout_height="3dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="314dp"
            android:layout_marginBottom="313dp"
            android:background="@android:color/black" />

        <View
            android:id="@+id/water_reminder_view2"
            android:layout_width="20dp"
            android:layout_height="3dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="313dp"
            android:layout_marginBottom="360dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/water_reminder_textView3L"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="123dp"
            android:layout_marginEnd="38dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="3L"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/water_reminder_textView1L"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="38dp"
            android:gravity="center"
            android:text="1L"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </RelativeLayout>

    <TextView
        android:id="@+id/water_reminder_textView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/curved_textview"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="WATER REMINDER"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />


</RelativeLayout>