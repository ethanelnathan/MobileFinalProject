<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:layout_marginHorizontal="30dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/curved_relativelayoutall"
    android:backgroundTint="@color/exc_teal"
    android:padding="20dp"
    android:gravity="center">

    <TextView
        android:id="@+id/exercizelayout_time"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:gravity="center"
        android:text="00:00 am"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Switch
        android:id="@+id/exercizelayout_switch"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="37dp"
        android:layout_marginStart="50dp"
        android:textColor="@color/black"
        android:gravity="center"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/exercizelayout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_marginEnd="23dp"
        android:layout_marginStart="10dp"
        android:text="Pushup"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/exercizelayout_reps"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/black"
        android:text="30 Times"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp" />
</RelativeLayout>